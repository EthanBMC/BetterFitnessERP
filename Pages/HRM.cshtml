@page
@model BetterFitnessERP.Pages.HRMModel
@{
    ViewData["Title"] = "HRM";
}

<h2>HRM</h2>

<form method="get" class="form-inline mb-3">
    <label for="SearchDept">Filter by Department:</label>
    <select asp-for="SearchDept" class="form-control mx-2">
        <option value="All">All</option>
        @foreach (var d in Model.Departments.Where(x => x != "All"))
        {
            <option value="@d" selected="@(d == Model.SearchDept ? "selected" : null)">@d</option>
        }
    </select>
    <button type="submit" class="btn btn-primary mt-3">Apply</button>
</form>

<h4>Add Employee</h4>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="InputEmployee.FirstName">First Name</label>
        <input asp-for="InputEmployee.FirstName" class="form-control" placeholder="Enter First Name" />
        <span asp-validation-for="InputEmployee.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="InputEmployee.LastName">Last Name</label>
        <input asp-for="InputEmployee.LastName" class="form-control" placeholder="Enter Last Name" />
        <span asp-validation-for="InputEmployee.LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="InputEmployee.Email"></label>
        <input asp-for="InputEmployee.Email" class="form-control" placeholder="Enter Email" />
        <span asp-validation-for="InputEmployee.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="InputEmployee.Department"></label>
        <select asp-for="InputEmployee.Department" class="form-control">
            <option value="">-- Select Department --</option>
            @foreach (var d in Model.Departments.Where(x => x != "All"))
            {
                <option value="@d" selected="@(d == Model.InputEmployee?.Department ? "selected" : null)">@d</option>
            }
        </select>
        <span asp-validation-for="InputEmployee.Department" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="InputEmployee.Salary"></label>
        <input asp-for="InputEmployee.Salary" class="form-control" placeholder="Enter Salary in $" />
        <span asp-validation-for="InputEmployee.Salary" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Save</button>
</form>

<hr />

<h4>Employee Directory</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Department</th>
            <th>Email</th>
            <th class="text-right">Salary</th>
            <th>Hire Date</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Employees.Any())
        {
            foreach (var e in Model.Employees)
            {
                <tr>
                    <td>@(e.FirstName) @(e.LastName)</td>
                    <td>@e.Department</td>
                    <td>@e.Email</td>
                    <td class="text-right">@string.Format("{0:C}", e.Salary)</td>
                    <td>@(e.HireDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="5">No employees found.</td></tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <strong>Total employees:</strong> @Model.TotalEmployees<br />
    <strong>Distinct departments in result:</strong> @Model.DeptCount<br />
    <strong>Average salary:</strong> @string.Format("{0:C}", Model.AvgSalary)<br />
    <strong>Estimated monthly payroll:</strong> @string.Format("{0:C}", Model.MonthlyPayroll)
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
